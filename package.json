{
  "name": "@bbfan/populate-url",
  "version": "1.0.5",
  "description": "Helps to manage your URL templates and populate parameters to it. Has a TS type validation that shows required template params to be filled.",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Bogdan Burdin",
  "repository": "https://github.com/burdinbogdan/populateUrl",
  "keywords": [
    "npm",
    "package",
    "bbfan",
    "populate",
    "URL",
    "link",
    "template"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc --p tsconfig.build.json",
    "dtslint": "dtslint types",
    "test": "jest ",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "dtslint": "4.2.1",
    "eslint": "8.4.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.3",
    "jest-extended": "1.2.0",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "ts-jest": "27.1.0",
    "tsc": "2.0.3",
    "typescript": "4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}